---
layout: 'base.njk'
---

<article class="main-article">

  
    <figure class="main-article__figure" >
      <img class="article-img" src="{{ image }}" alt="{{ imageAlt }}" data-aos="fade" data-aos-delay="50">
      <figcaption style="margin-left: 1rem;">
        {{ imageAlt }}
      </figcaption>
    </figure>

<div class="container container--narrow flow">
    <h1 class="article-title" style="font-size: 3rem">
      {{ title }}
    </h1>
    <p class="snippet__meta">by <span style="color: #006BF4; font-weight: bold;">{{author}}</span> on <span >{{ date | postDate }} </span></p>

    {{ content | safe}}
    
  
</div>
</article>
    
